{
  "name": "shopify-webpack",
  "version": "2.0.0",
  "description": "shopify development tool using themekit and webpack",
  "main": "index.js",
  "scripts": {
    "build": "cross-env NODE_ENV=development webpack --mode development --config lib/webpack/dev.config.js",
    "build:prod": "cross-env NODE_ENV=production webpack --mode production --config lib/webpack/prod.config.js",
    "start": "npm-run-all -p -r build watch theme:sync",
    "watch": "webpack --watch --mode development",
    "deploy": "npm-run-all -p -r build theme:deploy",
    "theme:sync": "theme watch -d dist",
    "theme:deploy": "theme deploy -d dist",
    "theme:download": "theme download -d src",
    "theme:download:production": "theme download -e production -d src",
    "lint:css": "stylelint \"styles/**/*.scss\" --formatter verbose",
    "fix:css": "stylelint --fix \"styles/**/*.scss\" --formatter verbose",
    "lint:js": "eslint \"scripts/**/*.js\"",
    "fix:js": "eslint \"scripts/**/*.js\" --fix",
    "test": "stylelint --fix \"styles/**/*.scss\" && eslint \"scripts/**/*.js\""
  },
  "author": "Eric Hayes",
  "license": "ISC",
  "dependencies": {
    "jquery": "^3.4.1",
    "lazysizes": "^5.2.2"
  },
  "devDependencies": {
    "@namics/stylelint-bem": "^6.3.0",
    "@shopify/babel-preset": "^23.0.0",
    "autoprefixer": "^9.7.5",
    "babel": "^6.23.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^8.1.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-shopify": "^20.1.0",
    "browser-sync": "^2.26.7",
    "browser-sync-webpack-plugin": "^2.2.2",
    "clean-webpack-plugin": "^3.0.0",
    "concat-style-loader": "^1.0.0-beta.14",
    "copy-webpack-plugin": "^5.1.1",
    "cross-env": "^7.0.2",
    "crypto": "^1.0.1",
    "css-loader": "^2.1.1",
    "cssnano": "^4.1.10",
    "eslint": "^5.16.0",
    "eslint-plugin-shopify": "^28.0.0",
    "extract-loader": "^5.1.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^4.3.0",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.7.0",
    "node-sass": "^4.13.1",
    "npm-run-all": "^4.1.5",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^1.19.1",
    "read-yaml": "^1.1.0",
    "sass-loader": "^7.3.1",
    "style-loader": "^0.23.1",
    "stylelint": "^10.1.0",
    "stylelint-config-prettier": "^5.3.0",
    "stylelint-config-recommended-scss": "^3.3.0",
    "stylelint-config-shopify": "^7.4.0",
    "stylelint-prettier": "^1.1.2",
    "stylelint-scss": "^3.16.0",
    "stylelint-selector-bem-pattern": "^2.1.0",
    "stylelint-webpack-plugin": "^0.10.5",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "url-loader": "^2.3.0",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-dev-middleware": "^3.7.2",
    "webpack-dev-server": "^3.10.3",
    "webpack-hot-middleware": "^2.25.0",
    "webpack-merge": "^4.2.2"
  }
}
